<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/cover_page"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Choose an action.."
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="35dp"
            android:textStyle="bold"
            android:typeface="sans">

        </TextView>


    </RelativeLayout>

    <GridLayout

        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="14dp">


        <Button
            android:id="@+id/BtVP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/ic_openbt"
            android:text="Open File"
            android:textAllCaps="false"
            android:textColor="#EC2115"
            android:textSize="20dp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/BtCP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="2"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/ic_crt"
            android:text="Create PDF"
            android:textAllCaps="false"
            android:textColor="#EC2115"
            android:textSize="20dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/BtnCnv"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="2"
            android:layout_columnWeight="1"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/ic_convertbtn"
            android:text="Converter"
            android:textAllCaps="false"
            android:textColor="#EC2115"
            android:textSize="20dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/BtnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="2"
            android:layout_columnWeight="2"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/ic_exitbtn"
            android:text="Exit"
            android:textAllCaps="false"
            android:textColor="#EC2115"
            android:textSize="20dp"
            android:typeface="monospace" />

    </GridLayout>

</LinearLayout>